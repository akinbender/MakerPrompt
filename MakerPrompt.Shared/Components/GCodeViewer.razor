@inject MakerPromptJsInterop JS
@inject GCodeDocumentService GCodeDoc
@inject IStringLocalizer<Resources> localizer
@implements IAsyncDisposable

<div class="card p-0">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">@localizer[Resources.BrailleRAP_GeneratedGCode]</h5>
        <div class="d-flex align-items-center gap-2">
            <div class="d-flex align-items-center gap-2 mb-2">
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" id="toggle-visual" checked="@showVisual" @onchange="ToggleMode" />
                    <label class="form-check-label" for="toggle-visual">@("Visual")</label>
                </div>
            </div>
            <button class="btn btn-sm btn-outline-secondary" @onclick="CopyGCode">
                <i class="bi bi-clipboard"></i> @localizer[Resources.BrailleRAP_Copy]
            </button>

            <button class="btn btn-sm btn-outline-secondary" @onclick="CopyGCode">
                <i class="bi bi-file-arrow-up"></i> Export
            </button>
        </div>
    </div>
    <div class="card-body">
        @if (showVisual)
        {
            <div @ref="viewerContainer" id="gcode-container" style="width:100%;height:400px;"></div>
        }
        else
        {
            <pre class="mb-0" style="max-height: 400px; overflow-y: auto;"><code>@(GCodeDoc.CurrentGCode ?? string.Empty)</code></pre>
        }
    </div>
</div>


@code {
    private ElementReference viewerContainer;
    private bool showVisual = true;

    protected override void OnInitialized()
    {
        GCodeDoc.Changed += OnDocChanged;
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (showVisual && !string.IsNullOrWhiteSpace(GCodeDoc.CurrentGCode))
        {
            await JS.InitializeViewerAsync(viewerContainer, GCodeDoc.CurrentGCode!);
        }
    }

    private void OnDocChanged()
    {
        StateHasChanged();
    }

    private void ToggleMode(ChangeEventArgs e)
    {
        showVisual = e.Value is bool b ? b : showVisual;
        StateHasChanged();
    }

    private async Task CopyGCode()
    {
        try
        {
            await JS.CopyToClipboard(GCodeDoc.CurrentGCode!);
        }
        catch (Exception)
        {
            //add notification if fail, implement toast notification? cross platform?
            //ShowStatus(Localizer[Resources.BrailleRAP_CopiedToClipboard], "alert-success");
        }
        
    }

    public async ValueTask DisposeAsync()
    {
        GCodeDoc.Changed -= OnDocChanged;
        await Task.CompletedTask;
    }
}